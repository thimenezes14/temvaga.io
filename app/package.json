{
  "name": "temvaga.io",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "url": "https://github.com/thimenezes14/temvaga.io.git"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-regular-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "bootstrap": "^4.6.0",
    "dotenv": "^8.2.0",
    "electron-context-menu": "^2.5.0",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-bootstrap": "^1.5.2",
    "react-data-table-component": "^6.11.7",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "sequelize": "^6.6.2",
    "serialport": "^9.0.7",
    "sqlite3": "^5.0.2",
    "styled-components": "^5.2.3"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "electron-packager": "^15.2.0",
    "electron-rebuild": "^2.3.5",
    "wait-on": "^5.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-start": "electron .",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm build",
    "electron-pack": "electron-builder -w",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "name": "Thiago Menezes",
    "email": "thi.menezes14@gmail.com"
  },
  "build": {
    "appId": "io.vaga.tem",
    "productName": "TemVaga.io - Sistema de Gerenciamento de Vagas de Estacionamento",
    "copyright": "Copyright Â© 2021 ${author}",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "asar": true,
      "target": "NSIS",
      "icon": "build/images/temvaga-512x512.png"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "server/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release/"
    }
  }
}
